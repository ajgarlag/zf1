<?xml version="1.0"?>
<configdata>
    <context type = 'resource' name = 'library-directory' alias = 'ld' class='Zend_Build_Resource_LibraryDirectory'>
        <attribute getopt='apple|a'>
            <usage>
                This is how you use apple with lib-dir.
            </usage>
        </attribute>
